<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/main"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/up_lin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/toolbar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/toolbar_txt_lin"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:layout_weight="1">
						<TextView
							android:id="@+id/welcome_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dp"
							android:layout_marginTop="8dp"
							android:text="Welcome To Notes +"
							android:textSize="25sp"
							android:textColor="#3770FD"/>
						<TextView
							android:id="@+id/notes_subtitle"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dp"
							android:text="Here Is Your Notes"
							android:textSize="16sp"
							android:textColor="#000000"/>
					</LinearLayout>
					<ImageView
						android:id="@+id/ic_settings"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="5dp"
						android:layout_marginRight="5dp"
						android:src="@drawable/ic_settings"
						android:scaleType="fitCenter"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/length_lin"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/notes_im_lin"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/notes_lin"
							android:layout_width="match_parent"
							android:layout_height="210dp"
							android:layout_marginLeft="10dp"
							android:layout_marginTop="8dp"
							android:layout_marginRight="10dp"
							android:layout_marginBottom="8dp"
							android:background="#3770FD"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical"
							android:layout_weight="1">
							<TextView
								android:id="@+id/notes_length_title"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="All Notes"
								android:textSize="20sp"
								android:textColor="#FFFFFF"/>
							<TextView
								android:id="@+id/notes_length"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="27"
								android:textSize="16sp"
								android:textColor="#FFFFFF"/>
						</LinearLayout>
						<LinearLayout
							android:id="@+id/important_lin"
							android:layout_width="match_parent"
							android:layout_height="210dp"
							android:layout_marginTop="8dp"
							android:layout_marginRight="10dp"
							android:layout_marginBottom="8dp"
							android:background="#F6F7FB"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical"
							android:layout_weight="1">
							<TextView
								android:id="@+id/important_len_title"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Important Notes"
								android:textSize="20sp"
								android:textColor="#3770FD"/>
							<TextView
								android:id="@+id/important_length"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="17"
								android:textSize="16sp"
								android:textColor="#3770FD"/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/btm_lin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:id="@+id/recent_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginBottom="5dp"
					android:text="Recent Note"
					android:textSize="18sp"
					android:textColor="#3770FD"/>
				<LinearLayout
					android:id="@+id/notes_list_lin"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/notes_list_lin_main"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/note_main"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="10dp"
							android:layout_marginTop="5dp"
							android:layout_marginRight="10dp"
							android:layout_marginBottom="5dp"
							android:background="#F6F7FB"
							android:orientation="horizontal">
							<LinearLayout
								android:id="@+id/side_lin"
								android:layout_width="20dp"
								android:layout_height="match_parent"
								android:background="#3770FD"
								android:gravity="center_horizontal|center_vertical"
								android:orientation="vertical"/>
							<LinearLayout
								android:id="@+id/text_lin"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="vertical">
								<LinearLayout
									android:id="@+id/title_time_lin"
									android:layout_width="match_parent"
									android:layout_height="30dp"
									android:gravity="center_vertical"
									android:orientation="horizontal">
									<TextView
										android:id="@+id/title"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="5dp"
										android:text="Note Title"
										android:textSize="18sp"
										android:textColor="#3770FD"
										android:layout_weight="1"/>
									<TextView
										android:id="@+id/time"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginRight="5dp"
										android:text="12:00 PM"
										android:textSize="14sp"
										android:textColor="#616161"/>
								</LinearLayout>
								<LinearLayout
									android:id="@+id/note_lin"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:orientation="horizontal"
									android:layout_weight="1">
									<TextView
										android:id="@+id/note"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_margin="5dp"
										android:text="Note"
										android:textSize="16sp"
										android:textColor="#000000"/>
								</LinearLayout>
								<TextView
									android:id="@+id/date"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="5dp"
									android:layout_marginBottom="5dp"
									android:text="2 July"
									android:textSize="14sp"
									android:textColor="#616161"/>
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/empty_lin"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical"
						android:layout_weight="1">
						<ImageView
							android:id="@+id/empty_img"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:src="@drawable/empty"
							android:scaleType="fitCenter"/>
						<TextView
							android:id="@+id/empty_txt"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp"
							android:text="There's Nothing To Appear"
							android:textSize="18sp"
							android:textColor="#3770FD"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:layout_gravity="right|bottom"
		app:srcCompat="@drawable/ic_add_note"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
